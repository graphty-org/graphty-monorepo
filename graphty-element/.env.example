# Copy this file to .env.local and fill in your API keys
# .env.local is gitignored and will not be committed

# WebXR and screenshots / clipboard require https
HTTPS_CERT_PATH=/path/to/server.crt
HTTPS_KEY_PATH=/path/to/server.key
HOST=my.server.com
PORT=31337

# For browser testing (Vite dev server)
VITE_OPENAI_API_KEY=sk-...
VITE_ANTHROPIC_API_KEY=sk-ant-...
VITE_GOOGLE_API_KEY=AIza...

# For Node.js testing (vitest)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AIza...
