{
  "name": "graphty",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist/",
    "package.json",
    "package-lock.json",
    "README.md"
  ],
  "scripts": {
    "test": "vitest --project=default",
    "test:storybook": "vitest --project=storybook",
    "test:all": "vitest --project=storybook --project=default && npm run chromatic",
    "test:visual": "npm run chromatic",
    "coverage": "vitest --project=storybook --project=default --coverage",
    "lint": "eslint",
    "lint:pkg": "knip",
    "lint:all": "npm run lint && npm run lint:pkg",
    "dev": "vite --force --mode development",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:storybook": "storybook build",
    "storybook": "storybook dev -p 9025 --no-open",
    "chromatic": "npx chromatic --project-token=chpt_1dbd83f7d3e84f6",
    "prepare": "husky",
    "postinstall": "playwright install",
    "build-storybook": "npm run build:storybook",
    "ready:commit": "npm run build && npm run lint && npm run test:all"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@storybook/addon-console": "^3.0.0",
    "@storybook/addon-docs": "^9.0.11",
    "@storybook/addon-vitest": "^9.0.11",
    "@storybook/web-components-vite": "^9.0.11",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@types/hammerjs": "^2.0.46",
    "@types/jmespath": "^0.15.2",
    "@types/lodash": "^4.17.19",
    "@types/node": "^20.19.2",
    "@vitest/browser": "^3.1.4",
    "@vitest/coverage-v8": "^3.1.4",
    "chromatic": "^13.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "d3-force-3d": "^3.0.5",
    "eruda": "^3.4.3",
    "eslint": "^9.29.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "knip": "^5.61.3",
    "playwright": "^1.53.0",
    "storybook": "^9.0.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": ">=5.4.19",
    "vite-plugin-cem": "^0.8.2",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@babylonjs/core": "^8.11.0",
    "@graphty/layout": "^1.1.0",
    "colorjs.io": "^0.5.2",
    "hammerjs": "^2.0.8",
    "jmespath": "^0.16.0",
    "lit": "^3.3.0",
    "lodash": "^4.17.21",
    "ngraph.forcelayout": "^3.3.1",
    "ngraph.graph": "^20.0.1",
    "on-change": "^5.0.1",
    "zod": "^3.25.28"
  },
  "overrides": {
    "storybook": "$storybook"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}