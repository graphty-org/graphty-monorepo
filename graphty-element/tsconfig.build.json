{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "allowImportingTsExtensions": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "index.ts"],
    "exclude": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "test/**/*",
        "**/*.stories.ts",
        ".storybook/**/*",
        "src/debug/**/*",
        "coverage/**/*",
        "dist/**/*",
        "node_modules/**/*"
    ]
}
