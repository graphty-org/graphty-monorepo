{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Lit features */
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "stories/**/*.ts",
    "eslint.config.mjs",
    ".storybook/**/*.ts",
    "commitlint.config.mjs",
    "*.mjs",
    "*.js",
    "*.ts"
  ],
  "exclude": ["storybook-static/**/*.js", "coverage"]
}
