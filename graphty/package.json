{
    "name": "@graphty/graphty",
    "private": true,
    "version": "0.1.1",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "coverage": "vitest run --coverage",
        "coverage:preview": "npx serve coverage -p 9054",
        "lint": "eslint && tsc --noEmit",
        "lint:fix": "eslint --fix",
        "typecheck": "tsc --noEmit",
        "storybook": "storybook dev -p 9035 --no-open --https --ssl-cert ~/ssl/STAR_ato_ms.crt --ssl-key ~/ssl/atoms.key",
        "build-storybook": "storybook build",
        "test:visual": "npx chromatic",
        "test:visual:debug": "npx chromatic --debug",
        "chromatic": "npx chromatic --exit-zero-on-changes",
        "husky:prepush": "echo no prepush check",
        "ready:commit": "npm run build && npm run lint && npm run test:run"
    },
    "dependencies": {
        "@babylonjs/core": "^8.36.1",
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@graphty/graphty-element": "workspace:*",
        "@mantine/core": "^8.1.3",
        "@mantine/hooks": "^8.1.3",
        "@redheadphone/react-json-grid": "^0.9.4",
        "@sentry/react": "^10.30.0",
        "clsx": "^2.1.1",
        "lit": "^3.3.1",
        "lucide-react": "^0.525.0",
        "pupt": "^1.3.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^4.0.0",
        "@eslint/js": "^9.29.0",
        "@sentry/vite-plugin": "^4.6.1",
        "@storybook/addon-docs": "^9.0.11",
        "@storybook/react": "^9.0.11",
        "@storybook/react-vite": "^9.0.11",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.1.4",
        "@vitest/ui": "^3.1.4",
        "chromatic": "^13.1.2",
        "eruda": "^3.4.3",
        "eslint": "^9.29.0",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-storybook": "^0.11.1",
        "jsdom": "^25.0.1",
        "playwright": "^1.54.1",
        "storybook": "^9.0.11",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.1",
        "vite": ">=5.4.19",
        "vitest": "^3.1.4"
    },
    "overrides": {
        "storybook": "$storybook"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
