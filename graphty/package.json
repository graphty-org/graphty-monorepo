{
    "name": "@graphty/graphty",
    "version": "0.4.2",
    "private": true,
    "description": "React application for graph visualization built with Mantine and graphty-element",
    "author": "Adam Powers <apowers@ato.ms>",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "coverage": "vitest run --coverage",
        "coverage:preview": "npx serve coverage -p 9054",
        "lint": "eslint && tsc --noEmit",
        "lint:fix": "eslint --fix",
        "typecheck": "tsc --noEmit",
        "storybook": "storybook dev -p 9035 --no-open --https --ssl-cert ~/ssl/STAR_ato_ms.crt --ssl-key ~/ssl/atoms.key",
        "build-storybook": "storybook build",
        "test:visual": "npx chromatic",
        "test:visual:debug": "npx chromatic --debug",
        "chromatic": "npx chromatic --exit-zero-on-changes",
        "husky:prepush": "echo no prepush check",
        "ready:commit": "npm run build && npm run lint && npm run test:run"
    },
    "dependencies": {
        "@babylonjs/core": "^8.36.1",
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@graphty/graphty-element": "workspace:*",
        "@mantine/core": "^8.1.3",
        "@mantine/hooks": "^8.1.3",
        "@redheadphone/react-json-grid": "^0.9.4",
        "@sentry/react": "^10.30.0",
        "clsx": "^2.1.1",
        "lit": "^3.3.1",
        "lucide-react": "^0.525.0",
        "pupt": "^1.3.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@sentry/vite-plugin": "^4.6.1",
        "@storybook/addon-docs": "^9.0.11",
        "@storybook/react": "^9.0.11",
        "@storybook/react-vite": "^9.0.11",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "eslint-plugin-storybook": "^0.11.1",
        "jsdom": "^25.0.1"
    },
    "overrides": {
        "storybook": "$storybook"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/graphty-org/graphty-monorepo.git",
        "directory": "graphty"
    },
    "homepage": "https://github.com/graphty-org/graphty-monorepo/tree/master/graphty#readme",
    "bugs": {
        "url": "https://github.com/graphty-org/graphty-monorepo/issues"
    },
    "keywords": [
        "graph",
        "visualization",
        "react",
        "mantine",
        "graphty"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
