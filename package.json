{
    "name": "graphty-monorepo",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "description": "Graphty monorepo - modular graph visualization ecosystem",
    "scripts": {
        "build": "pnpm exec nx run-many --target=build",
        "test": "pnpm exec nx run-many --target=test",
        "coverage": "pnpm -r run coverage && ./tools/merge-coverage.sh",
        "coverage:merge": "./tools/merge-coverage.sh",
        "coverage:merge:ci": "./tools/merge-coverage.sh --ci",
        "lint": "pnpm exec nx run-many --target=lint",
        "lint:knip": "knip",
        "typecheck": "pnpm exec nx run-many --target=typecheck",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepush": "NX_DAEMON=false pnpm exec nx affected -t build lint test --base=origin/master --head=HEAD --parallel=3",
        "prepush:fast": "./tools/prepush.sh",
        "prepare": "husky",
        "dev:algorithms": "pnpm --filter @graphty/algorithms run dev",
        "dev:layout": "pnpm --filter @graphty/layout run dev",
        "dev:graphty-element": "pnpm --filter @graphty/graphty-element run dev",
        "dev:graphty": "pnpm --filter @graphty/graphty run dev",
        "storybook:graphty-element": "pnpm --filter @graphty/graphty-element run storybook",
        "storybook:graphty": "pnpm --filter @graphty/graphty run storybook",
        "serve:algorithms": "pnpm --filter @graphty/algorithms run serve",
        "serve:layout": "pnpm --filter @graphty/layout run serve",
        "examples:algorithms": "pnpm --filter @graphty/algorithms run examples:html",
        "examples:layout": "pnpm --filter @graphty/layout run examples",
        "docs:api": "npm run docs:api:graphty-element && npm run docs:api:algorithms && npm run docs:api:layout && node tools/sanitize-api-docs.js",
        "docs:api:graphty-element": "cd graphty-element && typedoc --out ../docs/graphty-element/api/generated",
        "docs:api:algorithms": "cd algorithms && typedoc --out ../docs/algorithms/api/generated",
        "docs:api:layout": "cd layout && typedoc --out ../docs/layout/api/generated",
        "docs:content": "node tools/copy-docs-content.js",
        "docs:dev": "vitepress dev docs",
        "docs:watch": "npm run docs:content && npm run docs:api && vitepress dev docs",
        "docs:build": "npm run docs:content && npm run docs:api && vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "coverage:preview:algorithms": "npx serve algorithms/coverage -p 9051",
        "coverage:preview:layout": "npx serve layout/coverage -p 9052",
        "coverage:preview:graphty-element": "npx serve graphty-element/coverage -p 9053",
        "coverage:preview:graphty": "npx serve graphty/coverage -p 9054"
    },
    "engines": {
        "node": ">=18.19.0"
    },
    "packageManager": "pnpm@10.0.0",
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "pnpm": {
        "overrides": {
            "qs": ">=6.14.1",
            "happy-dom": ">=20.0.0",
            "preact": ">=10.28.2"
        }
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^4.0.0",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.29.0",
        "@nx/eslint": "22.3.3",
        "@nx/react": "^22.3.3",
        "@nx/storybook": "22.3.3",
        "@nx/vite": "22.3.3",
        "@nx/vitest": "22.3.3",
        "@nx/web": "22.3.3",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^20.19.9",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "chromatic": "^13.1.2",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "eruda": "^3.4.3",
        "eslint": "^9.29.0",
        "eslint-plugin-jsdoc": "^50.6.17",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.12.0",
        "happy-dom": "^20.0.11",
        "husky": "^9.1.7",
        "jiti": "2.4.2",
        "knip": "^5.61.3",
        "lcov-result-merger": "^5.0.1",
        "nx": "22.3.3",
        "playwright": "^1.54.1",
        "prettier": "^3.4.2",
        "semantic-release": "^25.0.2",
        "storybook": "9.1.17",
        "tsx": "^4.20.3",
        "typedoc": "^0.28.15",
        "typedoc-plugin-markdown": "^4.9.0",
        "typedoc-vitepress-theme": "^1.1.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.34.1",
        "vite": "^7.0.0",
        "vitepress": "^1.6.3",
        "vitest": "^3.2.4"
    }
}
