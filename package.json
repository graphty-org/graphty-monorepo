{
  "name": "graphty-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Graphty monorepo - modular graph visualization ecosystem",
  "scripts": {
    "build": "pnpm exec nx run-many --target=build",
    "test": "pnpm exec nx run-many --target=test",
    "lint": "pnpm exec nx run-many --target=lint",
    "typecheck": "pnpm exec nx run-many --target=typecheck",
    "prepush": "NX_DAEMON=false pnpm exec nx affected -t build lint test --base=origin/master --head=HEAD --parallel=3",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@nx/eslint": "22.3.3",
    "@nx/react": "^22.3.3",
    "@nx/storybook": "22.3.3",
    "@nx/vite": "22.3.3",
    "@nx/vitest": "22.3.3",
    "@nx/web": "22.3.3",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@vitest/browser": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^3.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~8.57.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "knip": "^5.61.3",
    "nx": "22.3.3",
    "storybook": "9.1.17",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vitest": "^3.0.0"
  }
}
