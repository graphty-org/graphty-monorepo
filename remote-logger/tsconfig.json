{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitOverride": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "vitest.config.ts", "test/**/*"]
}
